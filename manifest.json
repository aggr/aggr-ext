{
  "manifest_version": 2,
  "name": "Aggr",
  "short_name": "Aggr",
  "version": "0.1.0",
  "description": "Aggr toolbox",
  "homepage_url": "https://github.com/aggr/aggr-web-ext",
  "background": {
    "scripts": ["src/background.ts"]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "64": "assets/icon-64.png",
      "128": "assets/icon-128.png",
      "256": "assets/icon-256.png"
    }
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "assets/icon-19.png",
      "38": "assets/icon-38.png"
    },
    "default_title": "Subscribe with Aggr",
    "default_popup": "src/page_action.html",
    "show_matches": ["<all_urls>"]
  },
  "sidebar_action": {
    "browser_style": true,
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    },
    "default_title": "Aggr",
    "default_panel": "src/sidebar.html",
    "open_at_install": true
  },
  "options_ui": {
    "page": "src/options.html"
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Toggle the Aggr sidebar"
    }
  }
}
